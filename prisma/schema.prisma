generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id    String @id
  title String
  posts Post[]
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  image      String?
  content    String   @db.Text
  createdAt  DateTime @default(now())
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
}

model LocalAccount {
  username String @unique
  password String @db.Text
  salt     String
}

model Inquiry {
  id        Int      @id @default(autoincrement())
  name      String
  staffName String?
  phone     String
  email     String?
  content   String
  createdAt DateTime
}
